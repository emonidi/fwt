extends layout

block content
  - var headerImage = city.image
  .page-header.page-header-small(style={'background-image':'url('+headerImage+');min-height:25vh!important'})
    .filter
    .content-center
      .container
        .motto
          h2.title #{city.name}
  .wrapper
    section.section-gray.pricing-5
      form.form(method="POST")
        .container
          .row
            .col-md-6
              .form-group
                label.control-label Name
                input.form-control(type="text" name="name" value=city.name data-city)
              .form-group
                label.control-label Image
                input.form-control(type="text" name="image" value=city.image)
              .form-group
                label.control-label Description
                textarea.form-control(rows=10 name='description') #{city.description}
              .form-group
                label.control-label Longitude
                input.form-control(type="text" name="lng" value=city.location ? city.location.coordinates[0] : '')
              .form-group
                label.control-label Latitude
                input.form-control(type="text" name="lat" value=city.location ? city.location.coordinates[1] : '')
            .col-md-6
              #map
          .row
            .col-md-3.push-left
              input.btn.btn-primary(type="submit" value="Save")

block scripts
  <script src='https://api.mapbox.com/mapbox-gl-js/v1.0.0/mapbox-gl.js'></script>
  <script src="../../js/map.utils.js"></script>